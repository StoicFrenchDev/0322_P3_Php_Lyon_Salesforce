<div id="sidebar" class="bg-primary show shadow-lg sticky-md-top">
    <div class="list-group text-start vh-100">
        <ul class="list-unstyled text-white text-center text-md-start sticky-md-top vh-100 my-0">
            <div class="text-center my-1">
                <button type="button" class="btn text-reset d-md-none" data-bs-dismiss="offcanvas" aria-label="Close">
                    <i class="bi bi-x-circle-fill fs-4 text-white"></i>
                </button>
            </div>

            <hr class="d-md-none my-3">

            <div class="d-flex justify-content-center my-3">
                {% if app.user.pictureFileName %}
                <img src="{{ asset('/uploads/profiles_pictures/' ~ app.user.pictureFileName)}}" alt="photo de profil"
                    class="side-bar-profile-picture img-fluid rounded-circle">
                {% else %}
                <img src="{{ asset('build/images/blank-profil-picture.png' )}}" alt="photo de profil"
                    class="side-bar-profile-picture img-fluid rounded-circle">
                {% endif %}
            </div>

            <hr class="my-3">

            <a href="{{ path('user_show', {id:app.user.id}) }}" class="nav-link px-3 w-100 fs-5">
                <li class="my-3 py-1 fs-5">
                    <i class="bi bi-person-fill"></i> Mon Profil
                </li>
            </a>

            <hr class="my-3">

            <a href="{{ path('app_home') }}" class="nav-link px-3 w-100 fs-5">
                <li class="my-3 py-1 fs-5">
                    <i class="bi bi-house-fill"></i> Accueil
                </li>
            </a>

            <hr class="my-3">

            <a href="{{ path('app_home') }}" class="nav-link px-3 w-100 fs-5">
                <li class="my-3 py-1 fs-5">
                    <i class="bi bi-globe"></i> Global
                </li>
            </a>

            <a href="{{ path('ideas_by_user_office') }}" class="nav-link px-3 w-100 fs-5">
                <li class="my-3 py-1 fs-5">
                    <i class="bi bi-building-fill"></i> Mon agence
                </li>
            </a>

            <a href="{{ path('ideas_by_user_department') }}" class="nav-link px-3 w-100 fs-5">
                <li class="my-3 py-1 fs-5">
                    <i class="bi bi-people-fill"></i> Mon service
                </li>
            </a>

            <hr class="my-3">

            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('admin_users')}}" class="nav-link px-3 w-100 fs-5">
                <li class="my-3 py-1 fs-5">
                    <i class="bi bi-people-fill"></i> Utilisateurs
                </li>
            </a>

            <a href="{{ path('admin_ideas')}}" class="nav-link px-3 w-100 fs-5">
                <li class="my-3 py-1 fs-5">
                    <i class="bi bi-archive-fill"></i> Idées
                </li>
            </a>
            {% endif %}
        </ul>

        <hr class="my-0 text-white">
        <div class="d-flex align-items-end justify-content-center text-center text-md-start text-white mt-2">
            <a class="nav-link px-3 w-100 fs-5 py-2" href="{{ path('app_logout') }}">
                <i class="bi bi-box-arrow-left"></i> Déconnexion
            </a>
        </div>
    </div>
</div>