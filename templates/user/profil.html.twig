{% extends 'base.html.twig' %}

{% block title %}{{user.firstname}} {{user.lastname}}{% endblock %}

{% block body %}
<div class="row m-4">
    <div class="card h-100 shadow-lg p-2">
        <div class="card-body">
            <div class="row text-center text-md-start">
                <div class="col-md-3">
                    {% if user.pictureFileName %}
                    <img src="{{ asset('/uploads/profiles_pictures/' ~ user.pictureFileName)}}" alt="profile picture"
                        class="profile-picture img-fluid rounded-circle">
                    {% else %}
                    <img src="{{ asset('build/images/blank-profil-picture.png' )}}" alt="profile picture"
                        class="profile-picture img-fluid rounded-circle">
                    {% endif %}

                    {% if app.user.email is same as user.email %}
                    <form name="user" method="post" enctype="multipart/form-data" class="m-2">
                        <input type="file" id="upload-user-picture" name="upload-user-picture" class="form-control">
                        <label class="btn btn-primary text-white" for="upload-user-picture">
                            Changer de photo
                        </label>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button type="submit" class="btn btn-primary text-white p-2"><i
                                class="bi bi-upload"></i></button>
                    </form>
                    {% endif %}
                    {% if errors is defined %}
                    {% for error in errors %}
                    <div class="alert alert-danger text-center">
                        <li>{{error}}</li>
                    </div>
                    {% endfor %}
                    {% endif %}
                </div>
                <div class="col-md-9">
                    <h2> {{user.firstname}} {{user.lastname}} </h2>
                    <p>Agence de {{user.office}}</p>
                    <p>Service : {{user.service}}</p>
                    <p>poste : {{user.position}}</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row m-4">
    <div class="container my-4">
        <div>
            <h3 class="row row-cols-1 g-4 mx-4">
                Listes des id√©es de {{user.firstname}} {{user.lastname}} :
            </h3>
        </div>
        <div class="row row-cols-1 row-cols-md-2 justify-content-center row-cols-xl-3 g-4 mx-4">
            <div class="col">
                <div class="card h-100 shadow-lg p-2">
                    <div class="card-body">
                        <h3 class="card-title">titre</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}