{% extends 'base.html.twig' %}

{% block title %}{{user.firstname}} {{user.lastname}}{% endblock %}

{% block body %}
<div class="row m-4">
    <div class="card h-100 shadow-lg p-2">
        <div class="card-body">
            <div class="row m-4 text-center text-md-start">
                <div class="col-md-6">
                    {% if user.pictureFileName %}
                    <img src="{{ asset('/uploads/profiles_pictures/' ~ user.pictureFileName)}}" alt="profile picture"
                        class="profile-picture img-fluid rounded-circle">
                    {% else %}
                    <img src="{{ asset('build/images/blank-profil-picture.png' )}}" alt="profile picture"
                        class="profile-picture img-fluid rounded-circle">
                    {% endif %}
                    {% if app.user.email is same as user.email %}
                    <form name="user" method="post" enctype="multipart/form-data">
                        <input type="file" id="user_picture" name="user_picture" class="form-control">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <button type="submit" class="btn btn-primary text-white my-2">Mettre à jour</button>
                    </form>
                    {% endif %}
                </div>
                <div class="col-md-6">
                    <h2> {{user.firstname}} {{user.lastname}} </h2>
                    <p>Agence de : {{user.office}}</p>
                    <p>Service : {{user.service}}</p>
                    <p>poste : {{user.position}}</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row m-4">
    <div class="container my-4">
        <div>
            <h3 class="row row-cols-1 g-4 mx-4">
                Listes des idées de {{user.firstname}} {{user.lastname}} :
            </h3>
        </div>
        <div class="row row-cols-1 row-cols-md-2 justify-content-center row-cols-xl-3 g-4 mx-4">
            <div class="col">
                <div class="card h-100 shadow-lg p-2">
                    <div class="card-body">
                        <h3 class="card-title">titre</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}