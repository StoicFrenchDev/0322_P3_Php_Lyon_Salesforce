<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" type="image/png" href="{{ asset('build/images/favicon.png') }}" />
    <title>
        {% block title %}Projet 3 Name{% endblock %}
    </title>
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>

<body>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3 col-xl-2 px-0">
                {% block sideNavbar %}
                {% include "component/_sideNavbar.html.twig" %}
                {% endblock %}
            </div>
            <div class="col-12 col-md-9 col-xl-10 px-0">
                {% block topNavbar %}
                {% include "component/_topNavbar.html.twig" %}
                {% endblock %}
                {% for category, messages in app.flashes %}
                {% for message in messages %}
                <div class="alert alert-{{ category }}">
                    {{ message }}
                </div>
                {% endfor %}
                {% endfor %}
                {% block body %}
                {% endblock %}
            </div>
        </div>
    </div>
</body>

</html>