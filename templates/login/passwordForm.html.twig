{% extends 'loginBase.html.twig' %}

{% block title %}Nouveau mot de passe{% endblock %}

{% block body %}

<main class="container">

    <div class="text-center">
        <h1>Bienvenue</h1>
        <h2>Veuillez choisir une nouveau mot de passe pour accéder à la plateforme</h2>
        <img src="{{ asset('build/images/logo.png')}}" alt="logo" class="my-3" id="login-logo">
    </div>

    <div class="d-flex justify-content-center">
        <div class="col-9 col-md-6">
            <div class="card h-100 shadow-lg p-2">
                <div class="card-body d-flex flex-column">

                    <form action="{{ path('app_change_password') }}" name="user" method="post"  class="m-2">
                        <div class="mb-3">
                            <label for="">Nouveau mot de passe</label>      
                            <input type="password" class="form-control" name="new-password" id="new-password">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        </div>
                        <button type="submit" class="btn btn-success text-white p-2">Valider</button>
                    </form>

                </div>
            </div>
        </div>
    </div>

</main>
{% endblock %}